@model IEnumerable<ShowBlogForAdminViewModel>
@{
    ViewData["Title"] = "پست ها";
}


<div class="headline buttons two primary">
    <h4>لیست پست ها </h4>

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست بلاگ سایت
            </div>
            <!-- /.panel-heading -->
            <div class="form-box-item">

                <div class="panel-body">
                    <div class="col-md-12" style="margin: 10px 0;">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a class="btn btn-outline btn-success" href="/Admin/Blog/create">افزودن پست جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر پست</th>
                                    <th>عنوان پست</th>
                               
                                    <th>دستورات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="BlogRow@(item.BlogId)">
                                        <td><img src="~/Blog/Thumb/@item.ImageName" class="thumbnail" /></td>
                                        <td>@item.BlogTitle</td>
                                
                                        <td>
                                            <a href="/Admin/Blog/Edit/@item.BlogId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                         
                                            <a onclick="DeleteBlog(@item.BlogId)" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

@section Scripts{
    <script>


        function DeleteBlog(id) {
            $.ajax({
                type: "Get",
                url: "/Admin/Blog/Delete/" + id
            }).done(function () {
                $("#BlogRow" + id).fadeOut(1000);
            });



        };
    </script>
}
