@model Learn.DataLayer.Entities.Orders.Discount
@{
    ViewData["Title"] = "افزودن کد تخفیف";
}

<div class="headline buttons two primary">
    <h4>افزودن کد تخفیف جدید</h4>

</div>
<div class="row">
    <form method="post" enctype="multipart/form-data">

        <div class="panel panel-info">


            <div class="panel-heading">
                تخفیف
            </div>


            <div class="panel-body">
                <div class="form-group">
                    <label>کد</label>
                    <input asp-for="DiscountCode" class="form-control" />
                    <span asp-validation-for="DiscountCode" class="text-danger"></span>
                    <div id="alerCode" class="alert alert-danger" style="display:none">
                        <p class="text-muted">
                            کد وارد شده معتبر نمیباشد.
                        </p>
                    </div>

                </div>
                <div class="form-group">
                    <label>درصد تخفیف</label>
                    <input asp-for="DiscountPercent" class="form-control" />
                    <span asp-validation-for="DiscountPercent" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>تعداد استفاده</label>
                    <input asp-for="UsableCount" class="form-control" />
                    <span asp-validation-for="UsableCount" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>تاریخ شروع</label>
                    <input type="text" id="stDate" name="stDate" />

                </div>
                <div class="form-group">
                    <label>تاریخ پایان</label>
                    <input type="text" id="edDate" name="edDate" />

                </div>

            </div>

        </div>






        <div class="col-md-10">
            <input class="btn btn-block btn-success" type="submit" value="ثبت تخفیف" />

        </div>

    </form>
    <div class="col-md-2">
        <a class="btn btn-block btn-warning" href="/Admin/Discount">بازگشت به لیست کد  ها</a>
    </div>
</div>
@section Scripts{

    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet">
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="/js/kendo.all.min.js"></script>

    <script>


        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();

    </script>
    <script>
        $("#Discount_DiscountCode").blur(function () {
            $.ajax({
                type: "Get",
                url: "/Admin/Discount/CheckCode?code=" + $("#Discount_DiscountCode").val()



            }).done(function (res) {

                if (res === 'True') {

                    $("#alerCode").show();

                } else {
                    $("#alerCode").hide();

                }

            });
        });
    </script>

}