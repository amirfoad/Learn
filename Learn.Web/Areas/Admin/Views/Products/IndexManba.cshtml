@model IEnumerable<Manba>
@{
    ViewData["Title"] = "منابع";
}

<div class="headline buttons two primary">
    <h4>لیست  منابع </h4>

</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست منابع سایت
            </div>
            <!-- /.panel-heading -->
            <div class="form-box-item">

                <div class="panel-body">
                    <div class="col-md-12" style="margin: 10px 0;">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a class="btn btn-outline btn-success" href="/Admin/Products/CreateManba">افزودن منبع جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عکس</th>
                                    <th>عنوان منبع</th>


                                    <th>دستورات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="PageRow@(item.ManbaId)">
                                        <td><img class="thumbnail" src="~/Product/Manba/Thumb/@item.ImageName" /></td>
                                        <td>@item.Name</td>

                                        <td>
                                            <a href="/Admin/Products/EditManba/@item.ManbaId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                            @*<a onclick="DeletePage(@item.ManbaId)" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>


