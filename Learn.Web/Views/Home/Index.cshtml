<!-- PRODUCT SIDESHOW -->
<div id="product-sideshow-wrap">
    <div id="product-sideshow">
        <!-- PRODUCT SHOWCASE -->
        <div class="product-showcase">
            <!-- HEADLINE -->
            <div class="headline primary">
                <h4>جدیدترین محصولات</h4>
                <!-- SLIDE CONTROLS -->
                <div class="slide-control-wrap">
                    <div class="slide-control left">
                        <!-- SVG ARROW -->
                        <svg class="svg-arrow">
                            <use xlink:href="#svg-arrow"></use>
                        </svg>
                        <!-- /SVG ARROW -->
                    </div>

                    <div class="slide-control right">
                        <!-- SVG ARROW -->
                        <svg class="svg-arrow">
                            <use xlink:href="#svg-arrow"></use>
                        </svg>
                        <!-- /SVG ARROW -->
                    </div>
                </div>
                <!-- /SLIDE CONTROLS -->
            </div>
            <!-- /HEADLINE -->
            <!-- PRODUCT LIST -->
            <div id="pl-1" class="product-list grid column4-wrap owl-carousel">
                @foreach (var item in Model)
                {
                    <partial name="_BoxProduct" model="item" />
                }
            </div>
            @if (Model.Skip(5).Take(5).Any())
            {
                <div id="pl-2" class="product-list grid column4-wrap owl-carousel">
                    @foreach (var item in Model.Skip(5).Take(5))
                    {
                        <partial name="_BoxProduct" model="item" />
                    }
                </div>
            }
            @if (Model.Skip(10).Take(5).Any())
            {
                <div id="pl-2" class="product-list grid column4-wrap owl-carousel">
                    @foreach (var item in Model.Skip(10).Take(5))
                    {
                        <partial name="_BoxProduct" model="item" />
                    }
                </div>
            }


        </div>
        @if (popular != null)
        {
            <!-- PRODUCT SHOWCASE -->
            <div class="product-showcase">
                <!-- HEADLINE -->
                <div class="headline">
                    <h4>پرفروش ترین محصولات</h4>
                    <!-- SLIDE CONTROLS -->
                    <div class="slide-control-wrap">
                        <div class="slide-control left">
                            <!-- SVG ARROW -->
                            <svg class="svg-arrow">
                                <use xlink:href="#svg-arrow"></use>
                            </svg>
                            <!-- /SVG ARROW -->
                        </div>

                        <div class="slide-control right">
                            <!-- SVG ARROW -->
                            <svg class="svg-arrow">
                                <use xlink:href="#svg-arrow"></use>
                            </svg>
                            <!-- /SVG ARROW -->
                        </div>
                    </div>
                    <!-- /SLIDE CONTROLS -->
                </div>
                <div id="pl-5" class="product-list grid column4-wrap owl-carousel">
                    @foreach (var item in popular)
                    {
                        <partial name="_BoxProduct" model="item" />
                    }
                </div>
           
            </div>

        }
    </div>
</div>

